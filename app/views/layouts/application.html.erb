<!DOCTYPE html>
<html>
<head>
  <title>hOCRux</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="main_header" class="rounded">
	<div id="logo"><%= image_tag 'hOCRux_logo_grey.jpg' %></div>
	<div id="user">
		<% unless @user.nil? %>
			<div id="user-id">
				Welcome: <%= @user.first_name %>
			</div>

			<div id="sign-out">
				<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
			</div>
		<% end %>
	</div>
</div>

<div id="content">
	<%= yield %>
</div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

</body>
</html>
